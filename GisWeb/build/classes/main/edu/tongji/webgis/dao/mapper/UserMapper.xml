<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.tongji.webgis.dao.mapper.UserMapper">
    <!--  新增记录  -->
    <insert id="insertUser" parameterType="edu.tongji.webgis.model.User">
        insert into user(username,password,role) values(#{username},#{password},#{role})
    </insert>
    <!--  查询单条记录  -->
    <select id="selectUser" parameterType="String" resultMap="edu.tongji.webgis.model.User">
        select * from user where username = #{username}
    </select>

</mapper>